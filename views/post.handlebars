<section class = "flex-row justify-center">
    <h1>{{post.title}}</h1>
    <h5>
        Posted by {{post.poster}} on {{format_date post.date}}</h5>
    <p>{{post.body}}</p>
</section>
{{#each comments as |comment|}}
<article class = "comments">
<p>
    {{comment.body}}
</p>
<p>
    -{{comment.commenter}} on {{comment.date}}
</p>
</article>
{{/each}}
<script src = "/js/post.js"></script>