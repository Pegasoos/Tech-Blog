<section>
<!--List of User's Posts-->
{{#each userPosts}}
<section>
    <h1>{{this.title}}</h1>
    <h5>{{format_date this.date}}</h5>
</section>
{{/each}}
</section>
<!--Form for typing new post and title-->
<form class = "hidden">
    <label for="post-title">Title</label>
    <input type="text" id="post-title">
    <label for="post-body">Content</label>
    <textarea id = "post-body"></textarea>
    <button id = "create-post-button">Create Post</button>
</form>
<!--Button to summon new post fields-->
<button id = "post-button">New Post</button>
<script src = "../public/js/post.js"></script>